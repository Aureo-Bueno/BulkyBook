@model IEnumerable<Product>
@{
    ViewData["Title"] = "Product List";
}




<div class="container p-3 ">
    <div class="row pt-4 mb-3">
        <div class="col-6">
            <h2 class="text-dark">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th> Product Name </th>
                <th> Value </th>
                <th> Date </th>
                <th></th>
            </tr>
        </thead>
        <thbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="25%"> @obj.Name</td>
                    <td width="30%"> @obj.Value</td>
                    <td width="20%"> @obj.CreatedAt</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2 "><i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 "><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </thbody>
    </table>
</div>
